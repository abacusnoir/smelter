#!/usr/bin/env smt run
;;;; Hello World - Minimal Smelter/Coalton Example
;;;; Demonstrates clean Coalton syntax with I/O stdlib

(declare greet (String -> String))
(define (greet name)
  (<> "Hello from " (<> name "!")))

(define main
  (progn
    (smelter.stdlib.io:io-println (greet "Smelter"))
    (smelter.stdlib.io:io-println "Type-safe scripting with Coalton")))